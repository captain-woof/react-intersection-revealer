{
  "name": "react-intersection-revealer",
  "version": "1.3.0",
  "description": "An easy-to-use React hook that tells you whether a component/element is visible on the viewport currently, and if yes, how much of it is visible.",
  "author": "captain-woof",
  "keywords": [
    "hooks",
    "viewport",
    "lazy load",
    "motion",
    "inview",
    "useInView",
    "useIntersectionRevealer",
    "component",
    "react",
    "intersection",
    "react-intersection-observer",
    "react-intersection-revealer"
  ],
  "homepage": "https://github.com/captain-woof/react-intersection-revealer",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/captain-woof/react-intersection-revealer/issues",
    "email": "captainwoof.official@gmail.com"
  },
  "funding": "https://www.buymeacoffee.com/captainwoof",
  "repository": "captain-woof/react-intersection-revealer",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.ts",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "microbundle-crl --no-compress --format modern,cjs",
    "start": "microbundle-crl watch --no-compress --format modern,cjs",
    "prepare": "run-s build",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "eslint .",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "predeploy": "cd example && yarn install && yarn run build",
    "deploy": "gh-pages -d example/build -b gh-pages"
  },
  "peerDependencies": {
    "react": "^16.13.1"
  },
  "devDependencies": {
    "@types/react": "^17.0.34",
    "@types/react-dom": "^17.0.11",
    "babel-eslint": "^10.0.3",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-standard": "^4.0.1",
    "gh-pages": "^2.2.0",
    "microbundle-crl": "^0.13.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "^3.4.1",
    "typescript": "^4.4.4"
  },
  "files": [
    "dist"
  ]
}
